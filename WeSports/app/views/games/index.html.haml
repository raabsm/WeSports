= form_tag(games_path, :method => "get") do
  #search-bar.input-group
    = search_field_tag :name_search, params[:name_search], placeholder: "Enter a Sport", class: "form-control", :id => "search-name-bar"
    #search-button.input-group-btn
      = button_tag "Name Filter", :class => 'btn btn-info glyphicon glyphicon-search', :name => nil

= form_tag(games_path, :method => "get") do
  #search-bar.input-group
    = search_field_tag :zip_search, params[:zip_search], placeholder: "Enter a Zipcode", class: "form-control", :id => "search-zipcode-bar"
    #search-button.input-group-btn
      = button_tag "Zip Filter", :class => 'btn btn-info glyphicon glyphicon-search', :name => nil

%table#games.table.table-striped.col-md-12
  %thead
    %tr
      %th Sport Name
      %th Zip Code
      %th Start Time
      %th End Time
      %th Slots Available
  %tbody
    - @games.each do |game|
      %tr
        %td= game.sport_name
        %td= game.zipcode
        %td= game.game_start_time
        %td= game.game_end_time
        %td= game.spots_left
        %td= link_to "More about #{game.sport_name}", game_path(game)

= button_to 'Add new game', new_game_path, method: :get
